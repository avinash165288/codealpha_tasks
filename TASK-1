import random

# Predefined list of words
words = ['apple', 'brain', 'chair', 'grape', 'robot']

# Randomly choose a word
secret_word = random.choice(words)
guessed_letters = []
tries = 6

print("ğŸ® Welcome to Hangman!")
print("_ " * len(secret_word))

# Main game loop
while tries > 0:
    guess = input("\nGuess a letter: ").lower()

    # Check if input is valid
    if len(guess) != 1 or not guess.isalpha():
        print("âš ï¸ Please enter a single alphabet.")
        continue

    if guess in guessed_letters:
        print("ğŸ” You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in secret_word:
        print("âœ… Good guess!")
    else:
        tries -= 1
        print(f"âŒ Wrong guess! Tries left: {tries}")

    # Show the word with guessed letters
    display_word = ""
    for letter in secret_word:
        if letter in guessed_letters:
            display_word += letter + " "
        else:
            display_word += "_ "

    print("\n" + display_word.strip())

    # Check win condition
    if all(letter in guessed_letters for letter in secret_word):
        print("ğŸ‰ Congratulations! You guessed the word:", secret_word)
        break
else:
    print("ğŸ’€ Game Over! The word was:", secret_word)
